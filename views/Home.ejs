  display: block;
  margin: 0 auto;
}

.card-body {
  background-color: #262626;
  color: white;
  padding: 40px;
  text-align: center;
}

.card-body img {
  width: 100%; /* Full width of the card body */
  height: auto; /* Maintain aspect ratio */
  margin-bottom: 0; /* Remove extra margin if any */
}


.card-footer {
