  }

  .w-layout-grid-hero-grid {
    flex-direction: column; /* Stack hero section items */
    align-items: center; /* Center align items */
  }

  .w-layout-grid-hero-grid img {
    margin-top: 2em;
    margin-right: 0; /* Remove right margin */
    max-width: 100%; /* Ensure hero images are responsive */
  }

  .container {
    justify-content: center; /* Center cards in smaller screens */
  }

  .card {
    max-width: 90%; /* Limit max-width on smaller screens */
    margin: 10px 0; /* Vertical margin */
  }

  .card-body {
    padding: 20px; /* Reduce padding in card body */
  }

  .footer-content {
    flex-direction: column; /* Stack footer items */
    align-items: flex-start; /* Align items to the left */
  }

  .footer-links {
    flex-direction: column; /* Stack footer links */
  }
